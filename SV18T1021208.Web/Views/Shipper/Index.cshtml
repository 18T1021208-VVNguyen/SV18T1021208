@model SV18T1021208.Web.Models.ShipperPaginationResult

@{
    ViewBag.Title = "Người giao hàng";
}

<form action="~/shipper" method="get">
    <div class="input-group">
        <input type="text" name="seachValue" 
               class="form-control" 
               placeholder="Nhập họ tên hoặc số điện thoại"  
               autofocus 
               value="@Model.SearchValue">
        <span class="input-group-btn">
            <button type="submit" id="search-btn" class="btn btn-flat btn-info">
                <i class="fa fa-search"></i>
            </button>
            <a href="~/shipper/create" class="btn btn-flat btn-success" style="margin-left: 5px">
                Bổ sung
            </a>
        </span>
    </div>
</form>
<div style="margin-top:10px">
    <p> Có tổng cộng <b> @Model.RowCount </b>  người giao hàng trong<b> @Model.PageCount </b>  trang </p>
</div>

<div class="table-responsive" style="margin-top: 10px">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-blue">
                <th>Tên người giao hàng</th>
                <th>Số điện thoại</th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.ShipperName</td>
                    <td>@item.Phone</td>
                    <td style="width: 100px">
                        <a href="~/shipper/edit/@item.ShipperID" class="btn btn-success btn-xm">
                            <i class="fa fa-edit"> </i>
                        </a>

                        <a href="~/shipper/delete/@item.ShipperID" class="btn btn-danger btn-xm">
                            <i class="fa fa-trash-o"> </i>
                        </a>
                    </td>
                </tr>
            }



        </tbody>
    </table>
</div>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (Model.Page == i)
            {
                <li class="active"><a href="~/shipper?page=@i&seachValue=@Model.SearchValue">@i</a></li>
            }
            else
            {
                <li><a href="~/shipper?page=@i&seachValue=@Model.SearchValue">@i</a></li>
            }

        }
    </ul>
</div>




