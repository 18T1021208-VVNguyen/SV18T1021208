@model SV18T1021208.DomainModel.Shipper
@{
    ViewBag.Title = "Xóa thông tin người giao hàng";
}

<div class="container" style="width:85% ">
    <div class="box box-primary">

        <!-- /.box-body -->
        <div class="box-body" style="margin:15px 50px 0 0">
            <form class="form-horizontal" action="~/shipper/delete/@Model.ShipperID" method="post">
                <div class="form-group">
                    <label class="control-label col-sm-2">Tên khách hàng:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static"> @Model.ShipperName </p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Số điện thoại</label>
                    <div class="col-sm-10">
                        <p class="form-control-static"> @Model.Phone </p>
                    </div>
                </div>

                <!--box-footer-->
                <div class="box-footer">
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            @if (SV18T1021208.BusinessLayer.CommonDataService.InUsedShipper(Model.ShipperID))
                            {
                                <p class="text-danger"> Không được xóa người giao hàng này </p>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-danger">
                                    <i class="fa fa-trash"></i>
                                    Xóa dữ liệu
                                </button>
                            }
                            <a href="~/shipper" class="btn btn-warning">
                                <i class="fa fa-backward"></i>
                                Quay lại
                            </a>
                        </div>
                    </div>
                </div>
            </form>

        </div>

        
    </div>
    <!-- /.box -->

</div>





