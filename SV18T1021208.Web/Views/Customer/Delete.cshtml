@model SV18T1021208.DomainModel.Customer

@{
    ViewBag.Title = "Xóa thông tin khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="width:85% ">
    <div class="box box-primary">

        <!-- /.box-body -->
        <div class="box-body" style="margin:15px 50px 0 0">
            <form class="form-horizontal"
                  action="~/customer/delete/@Model.CustomerID"
                  method="post">
                <div class="form-group">
                    <label class="control-label col-sm-2">Tên khách hàng:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static"> @Model.CustomerName </p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Tên Giao dịch:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static"> @Model.ContactName </p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Địa chỉ :</label>
                    <div class="col-sm-10">
                        <p class="form-control-static"> @Model.Address </p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Quốc gia:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static"> @Model.Country </p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Thành phố: </label>
                    <div class="col-sm-10">
                        <p class="form-control-static"> @Model.City </p>
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-sm-2">Mã bưu chính</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.PostalCode </p>
                    </div>
                </div>


                <!--box-footer-->
                <div class="box-footer">
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                          
                            @if (SV18T1021208.BusinessLayer.CommonDataService.InUsedCustomer(Model.CustomerID))
                            {
                                <p class="text-danger"> Không được xóa khách hàng này </p>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-danger">
                                    <i class="fa fa-trash"></i>
                                    Xóa dữ liệu
                                </button>
                            }

                            <a href="~/customer" class="btn btn-warning">
                                <i class="fa fa-backward"></i>
                                Quay lại
                            </a>
                        </div>
                    </div>
                </div>

            </form>
        </div>

        
    </div>
    <!-- /.box -->

</div>


