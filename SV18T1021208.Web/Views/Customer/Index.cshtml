@model SV18T1021208.Web.Models.CustomerPaginationResult

@{
    ViewBag.Title = "Khách hàng";
}

<form action="~/customer" method="get">
    <div class="input-group">
        <input type="text" name="searchValue" class="form-control" 
               placeholder="Nhập họ tên hoặc địa chỉ" 
               autofocus value="@Model.SearchValue">
        <span class="input-group-btn">
            <button type="submit"  id="search-btn" class="btn btn-flat btn-info" >
                <i class="fa fa-search"></i>
            </button>
            <a href="~/customer/create" class="btn btn-flat btn-success" style="margin-left: 5px">
                Bổ sung
            </a>
        </span>
    </div>
</form>
<div style="margin-top:10px">
    <p> Có tổng cộng <b> @Model.RowCount </b>  khách hàng trong<b> @Model.PageCount </b>  trang </p>
</div>
    <div class="table-responsive" style="margin-top: 10px">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-blue">
                    <th>Tên khách hàng</th>
                    <th>Tên giao dịch</th>
                    <th>Địa chỉ</th>
                    <th>Quốc gia</th>
                    <th>Thành phố</th>
                    <th>Mã bưu chính</th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.CustomerName</td>
                        <td>@item.ContactName</td>
                        <td>@item.Address</td>
                        <td>@item.Country</td>
                        <td>@item.City</td>
                        <td>@item.PostalCode</td>

                        <td style="width: 100px">
                            <a href="~/customer/edit/@item.CustomerID" class="btn btn-success btn-xm">
                                <i class="fa fa-edit"> </i>
                            </a>

                            <a href="~/customer/delete/@item.CustomerID" class="btn btn-danger btn-xm">
                                <i class="fa fa-trash-o"> </i>
                            </a>
                        </td>
                    </tr>
                }



            </tbody>
        </table>
    </div>
    <div class="text-center">
        <ul class="pagination">


            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (Model.Page == i)
                {
                    <li class="active"><a href="~/customer?page=@i&searchValue=@Model.SearchValue">@i</a></li>
                }
                else
                {
                    <li><a href="~/customer?page=@i&searchValue=@Model.SearchValue">@i</a></li>
                }

            }
        </ul>
    </div>



