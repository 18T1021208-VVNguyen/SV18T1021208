@model SV18T1021208.DomainModel.Customer

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="width:85% ; text-align:center">
    <div class="box box-primary">

        <!-- /.box-body -->
        <div class="box-body" style="margin:15px 50px 0 0">
            <form class="form-horizontal" action="~/customer/save" method="post">

                @* <input type="hidden" name="CustomerID" value="@Model.CustomerID" />*@

                @Html.HiddenFor(m => m.CustomerID)

                <div class="form-group">
                    <label class="control-label col-sm-2">Tên khách hàng:</label>
                    <div class="col-sm-10">

                       @Html.TextBoxFor(m => m.CustomerName, new{
                           @class = "form-control",
                           @autofocus = "autofocus",
                           @placeholder = "Nhập tên khách hàng"
                       })
                        <!-- trường nó thành (id - name) , giá trị value tương ưng -->
                                            
                        @Html.ValidationMessageFor(m => m.CustomerName , "", new {
                           @style = "color: #f00 ; font-style : italic"
                       })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Tên Giao dịch:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.ContactName , new {
                       @class = "form-control",
                       @placeholder = "Nhập tên giao dịch"
                   })
                        @Html.ValidationMessageFor(m=>m.ContactName , "", new {
                        @style = "color: #f00 ; font-style:italic" })
                       
     
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Địa chỉ :</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Address, "", new { @style = "color: #f00 ; font-style : italic" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Quốc gia:</label>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(m => m.Country, SelectListHelper.Countries(), new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Country, "", new { @style = "color: #f00 ; font-style : italic" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Thành phố</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-sm-2">Mã bưu chính</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.PostalCode , new { @class = "form-control" })
                    </div>
                </div>

                <!--box-footer-->
                <div class="box-footer">

                    @*  @if (!ViewData.ModelState.IsValid)
                        {
                            @Html.ValidationSummary();
                        }*@

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save"></i>
                                Lưu dữ liệu
                            </button>
                            <a href="~/customer" class="btn btn-warning">
                                <i class="fa fa-backward"></i>
                                Quay lại
                            </a>
                        </div>
                    </div>
                </div>

            </form>
        </div>


    </div>
    <!-- /.box -->

</div>

