@model SV18T1021208.DomainModel.Supplier
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="width:85% ; text-align:center">
    <div class="box box-primary">

        <!-- /.box-body -->
        <div class="box-body" style="margin:15px 50px 0 0">
            <form class="form-horizontal" action="~/supplier/save" method="post">
                @Html.HiddenFor(m => m.SupplierID)

                <div class="form-group">
                    <label class="control-label col-sm-2">Tên nhà cung cấp:</label>
                    <div class="col-sm-10">

                        @Html.TextBoxFor(m => m.SupplierName, new
                        {
                            @class = "form-control",
                            @autofocus = "autofocus",
                            @placeholder = "Nhập tên nhà cung cấp"
                        })

                        @Html.ValidationMessageFor(m => m.SupplierName, "",
                       new
                            {
                           @style = "color: #f00 ; font-style : italic"
                       })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Tên Giao dịch:</label>
                    <div class="col-sm-10">

                        @Html.TextBoxFor(m => m.ContactName,new{
                                 @class = "form-control",
                                @placeholder = "Nhập tên giao dịch"
                                 })

                        @Html.ValidationMessageFor(m => m.ContactName, "",new
                            {
                           @style = "color: #f00 ; font-style : italic"
                       })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Địa chỉ :</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Address, new {
                                 @class = "form-control",
                                 @placeholder = "Nhập địa chỉ"
                        })

                        @Html.ValidationMessageFor(m => m.Address, "", new
                            {
                           @style = "color: #f00 ; font-style : italic"
                       })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Quốc gia:</label>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(m => m.Country, SelectListHelper.Countries(), new { 
                            @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Country, "", new { 
                            @style = "color: #f00 ; font-style : italic" })

                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Thành phố</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.City, new
                        {
                                 @class = "form-control",
                                 @placeholder = "Nhập tên thành phố"
                        })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Số điện thoại</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Phone, new
                       {
                                @class = "form-control",
                                @placeholder = "Nhập số điện thoại"
                       })

                        @Html.ValidationMessageFor(m=> m.Phone,"", new { @style = "color: #f00 ; font-style : italic" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Mã bưu chính</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.PostalCode, new
                      {
                               @class = "form-control",
                               @placeholder = "Nhập mã bưu chính"
                      })
                     
                    </div>
                </div>

                <!--box-footer-->
                <div class="box-footer">
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save"></i>
                                Lưu dữ liệu
                            </button>
                            <a href="~/supplier" class="btn btn-warning">
                                <i class="fa fa-backward"></i>
                                Quay lại
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>

       
    </div>
    <!-- /.box -->

</div>



